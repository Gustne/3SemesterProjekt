{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "forum_api": {
        "ClusterId": "forum_cluster",
        "Match": {
          "Path": "/forum/{**catch-all}"
        }
      },
      "login_api": {
        "ClusterId": "login_cluster",
        "Match": {
          "Path": "/login/{**catch-all}"
        }
      },
      "exitslip_api": {
        "ClusterId": "exitslip_cluster",
        "Match": {
          "Path": "/exitslip/{**catch-all}"
        }
      },
      "mailservice_api": {
        "ClusterId": "mailservice_cluster",
        "Match": {
          "Path": "/mailservice/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "forum_cluster": {
        "Destinations": {
          "forum_destination": {
            "Address": "http://forumfeedback.api:8080/" // Forum API lytter p책 port 8080
          }
        }
      },
      "login_cluster": {
        "Destinations": {
          "login_destination": {
            "Address": "http://login.api:8081/" // Login API lytter p책 port 8081
          }
        }
      },
      "exitslip_cluster": {
        "Destinations": {
          "exitslip_destination": {
            "Address": "http://exitslip:8082/" // Exitslip API lytter p책 port 8082
          }
        }
      },
      "mailservice_cluster": {
        "Destinations": {
          "mailservice_destination": {
            "Address": "http://mailservice:8083/" // Mailservice API lytter p책 port 8083
          }
        }
      }
    }
  }
}
